<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Table</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        td,tr{
            height: 2rem;
            width: 4rem;
        }

tr:nth-of-type(even) td:nth-of-type(even), tr:nth-of-type(odd) td:nth-of-type(odd){
    background-color:#98e4c2;
        }
        .main
        {
            display: flex;
            flex-direction: column;
            gap: 15px;
            background-color: rgb(205, 205, 253);
            
        }
        .btn
        {
            display: flex;
            gap: 10px;
        
            justify-content: center;
            
        }
        .txt
        {
            font-size: xx-large;
            text-align: center;
        }
        .btn1
        {
            font-size: larger;
            background-color:#98e4c2;
            width: 50px;
            height: 25px;
        }
        .txtheader
            {
                color: rgb(111, 120, 138);
                font-weight: bolder;
            }
            .container
            {
                max-width: 1080;
                padding: 20px;
                margin: 0 auto;
                background-color:#ECEFF4;
        
            }
            .nav
            {
                display: flex;
                justify-content: space-between;
                background-color:#51f0a9;
                margin: -20px;
                margin-bottom: 80px;
            }
            .btnprofile
            {
                display: flex;
                margin-right: 100px;
                gap: 20px;
                align-items: center;
            }
         

    </style>
</head>

<body>

<div class="main container">
    

    <div class="nav container">

        <div class="txtheader">
            <h1>DYNAMIC TABLE</h1>
        </div>

        <div class="btnprofile">
            <div>

                <a href="/dashboard"> DASHBOARD</a>
            </div>
            <div>

                <P>  <i class="fa-regular fa-user fa-2xl"></i> </P> 
            </div>
        </div>

    </div>
    <div class="btn">
        <div>
            <input type="button" id="subtractRow" onclick="Addcolumn()" value="+" class="btn1">
        </div>
        <div>
            <input type="button" id="subtractcolumn" onclick="subtractcolumn()" value="-" class="btn1">
        </div>
    </div>

    <div>
         <table id="tbl1" border=1 align="center">
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        
                    </td>
                </tr>
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        
                    </td>
                </tr>
            </table>
    </div>

    <div class="btn">
        <div>
            <input type="button" id="AddRow" onclick="AddRow()" value="+" class="btn1">
        </div>
        <div>
            <input type="button" id="subtractRow" onclick="subtractRow()" value="-" class="btn1">
        </div>
    </div>
</div>

    <script>
        function Addcolumn()
        {
            let trs = document.querySelectorAll('#tbl1 tr');
              for(let tr of trs)
              {
                let td =  document.createElement('td');
                let data=document.createTextNode("");
                td.appendChild(data);
                tr.appendChild(td);

              }
        }

        function AddRow()
        {
            let table = document.querySelector("#tbl1");
            let tr =  document.createElement('tr');
            let cols = document.getElementById("tbl1").rows[0].cells.length
    
            for(let i= 1 ; i<=cols ;i++)
            {
                let td= document.createElement('td');
                tr.appendChild(td);
            }
            table.appendChild(tr);
        }

        function subtractRow()
        {
            var x= document.getElementById("tbl1").rows.length;
            console.log(x);
            if(x>2)
            {
                document.getElementById("tbl1").deleteRow(-1);

            }
            
        }

        function subtractcolumn()
        {
            var table =document.getElementById("tbl1");
            var r = table.rows.length;
            let cols = document.getElementById("tbl1").rows[0].cells.length;
            if(cols>=3)
            {
                for(let i=0 ; i<=r ;i++)
                {

                    table.rows[i].deleteCell(-1);

                }
            }
        }
    </script>

 
</body>
</html>


