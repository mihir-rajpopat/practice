<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        table
        {
            border: 1px solid;
            width: 600px;
            background-color: white;
        }
        thead{
            border: 1px solid;
            margin-top: 5px;
            background-color:#98e4c2;
        }

        .btn
      {
        display: flex;
      margin-left: 100px;
      gap: 20px;
      margin-top: 0px;
      }
      .btc
      {
        border: 1px solid;
        background-color:#98e4c2;
        color: rgb(111, 120, 138);
        height: 30px;
        text-align: center;
        width: 50px;
   
      }
      a{
        text-decoration: none;
        color: rgb(111, 120, 138);
      }
      .head
      {
        display: flex;
        justify-content: center;
      }
      .txtheader
            {
                color: rgb(111, 120, 138);
                font-weight: bolder;
            }
            .container
            {
                max-width: 1080;
                padding: 20px;
                margin: 0 auto;
                background-color:#ECEFF4;
        
            }
            .nav
            {
                display: flex;
                justify-content: space-between;
                background-color:#51f0a9;
                margin: -20px;
                margin-bottom: 80px;
            }
            .btnprofile
            {
                display: flex;
                margin-right: 100px;
                gap: 20px;
                align-items: center;
            }
            table
            {
              background-color:#ECEFF4;
            }

    </style>
</head>




<body>
    

  <div class="container">

          <div class="nav container">
        
            <div class="txtheader">
                <h1>PAGINATION</h1>
            </div>
        
            <div class="btnprofile">
                <div>
        
                    <a href="/dashboard"> DASHBOARD</a>
                </div>
                <div>
        
                    <P>  <i class="fa-regular fa-user fa-2xl"></i> </P> 
                </div>
            </div>
        
        </div>


        <div class="head"> 
  
               
    
    
                <div class="btn">   
            
                <div class="btc">
                    <a href="/pagination?page=<%=1%>  <%= temp !== "November"?"&year="+temp : "" %> " > <<</a>
                </div>
        
                <div class="btc"> 
                  <% if (page > 1) { %>
                    <a href="/pagination?page=<%= page - 1%> <%= temp !== "November"?"&year="+temp : "" %> "> <</a>
                <% } %>    
              </div>
         
              <div class="btc">
                <lable><%=page%></lable>
              </div>
        
              <div class="btc">
                <% if (page < numberOfPages) { %>
                  <a href="/pagination?page=<%= page + 1%> <%= temp !== "November"?"&year="+temp : "" %> ">></a>
                  <% } %>
              </div>
        
            <div class="btc"> 
                <a href="/pagination?page=<%=numberOfPages%>  <%= temp !== "No vember"?"&year="+temp : "" %> ">>></a>
            </div>
        </div>
      
      
      
        </div>
    
    
    
        <div class="head">

          <table>
              <thead>
                  <td>Student ID</td>
                  <td>Student Name</td>
                  <td>Present Days</td>
                  <td>Percentage</td>
              
              </thead>
              <% for( let i = 0; i < data.length; i++ ) { %>
                  <tr>
                    <td><%= data[i].sid %></td>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].presentDay %></td>
                    <td><%= parseFloat(data[i].presentDay * 100 /28).toFixed(1) %> %</td>
                 
                 
                  </tr>
                  <% } %>
          </table>
        </div>

  </div>    



    <script>

    var change1
        function change()
        {
          change1 =document.getElementById("filter").value
          


            window.location.href =  window.location.origin + window.location.pathname +  "?page=1&year=" + change1 ;

            
          
            console.log("filter is ",change1);
        }
        ch =document.getElementById("filter");
        for (let i = 0; i < ch.options.length; i++) {
            if(ch.options[i].value === ch.options[i].dataset.val)
            {
                ch.options[i].selected=true;

            }
        
            
        }




    </script>
</body>




</html>