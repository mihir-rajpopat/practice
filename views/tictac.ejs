        </div>
    
    
 

        <div class="container">

            <table border="1" id="tbl" align="center">
                <tr>
                    <td id="1" onclick="game(1)">
                
                    </td>
                    <td id="2" onclick="game(2)">
        
                    </td>
                    <td id="3" onclick="game(3)">
        
                    </td>
                </tr>
                <tr>
                    <td id="4" onclick="game(4)">
        
                    </td>
                    <td id="5" onclick="game(5)">
        
                    </td>
